{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {"source":"/api/categoria", "function":"categoria"},
      {"source":"/api/filtroPlat", "function":"filtroPlat"},
      {"source": "**","destination": "/index.html"}
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
